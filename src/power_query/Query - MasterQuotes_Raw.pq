let
    //////////////////////////////////////////////////////////////////////////
    // STEP 1: Load the two existing queries (ExistingQuotes, CSVQuotes)
    //         These must already exist in Power Query.
    //////////////////////////////////////////////////////////////////////////
    SourceExisting = ExistingQuotes,
    SourceCSV = CSVQuotes,

    //////////////////////////////////////////////////////////////////////////
    // STEP 1.1: Add a DataSource column to each query
    //////////////////////////////////////////////////////////////////////////
    ExistingWithSource = Table.AddColumn(SourceExisting, "DataSource", each "Legacy"),
    CSVWithSource = Table.AddColumn(SourceCSV, "DataSource", each "CSV"),

    //////////////////////////////////////////////////////////////////////////
    // STEP 2: Append the two queries together
    //////////////////////////////////////////////////////////////////////////
    Merged = Table.Combine({ExistingWithSource, CSVWithSource}),

    //////////////////////////////////////////////////////////////////////////
    // STEP 3: Sort by Date Pulled (oldest to newest) then Document Amount (highest to lowest)
    //////////////////////////////////////////////////////////////////////////
    Sorted = Table.Sort(
        Merged,
        {
            {"Date Pulled", Order.Ascending},
            {"Document Amount", Order.Descending}
        }
    )
in
    //////////////////////////////////////////////////////////////////////////
    // Final Output: The combined and sorted table
    //////////////////////////////////////////////////////////////////////////
    Sorted

